<h2>Follower Users</h2>
<% if @users.present? %>
<table class = "table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
      <td><%= user.name %></td>
      <td>フォロー数:<%= @user.following_user.count %></td>
      <td>フォロワー数:<%= @user.follower_user.count %></td>
      <td><%= link_to "Show", user_path(@user.id) %></td>
    </tr>
    <% end %>
  </tbody>
  <% else %>
    <p>ユーザーはいません</p>
  <% end %>
</table>