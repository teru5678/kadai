<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'layouts/errors', obj: @book %>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.favorited_by?(current_user) %>
          <td>
            <%= link_to book_favorites_path(@book),method: :delete do %>
              ♥<%= @book.favorites.count %>
            <% end %>
          </td>
          <% else %>
          <td>
            <%= link_to book_favorites_path(@book),method: :post do %>
              ♡<%= @book.favorites.count %>
            <% end %>
          </td>
          <% end %>
          <td>コメント数:<%= @book.post_comments.count %></td>
          <td>
            <% if @book.user == current_user %>
            <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
          <td>
            <%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
            <% end %>
          </td>
        </tr>
      </table>
      <table class = "table">
        <% @book.post_comments.each do |post_comment| %>
        <tr>
          <td>
            <%= link_to user_path(post_comment.user.id) do %>
            <%= image_tag post_comment.user.get_profile_image, size:"100x100" %><br>
            <%= post_comment.user.name %>
            <% end %>
          </td>
          <td><%= post_comment.comment %></td>
          <td>
          <% if post_comment.user == current_user %>
          <%= link_to 'Destroy', book_post_comments_path(post_comment.book,post_comment), method: :delete, class: "btn btn-sm btn-danger" %>
          <% end %>
          </td>
        </tr>
        <% end %>
      </table>
      <div>
        <%= form_with model: [@book, @post_comment] do |f| %>
        <%= f.text_area :comment, class: "form-control book_comment" %><br>
        <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>