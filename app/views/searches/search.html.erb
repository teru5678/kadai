<h2>Books search for "<%= @word %>"</h2>
  <table class = "table">
    <% if @range == "User" %>
      <thaed>
        <th></th>
        <th>name</th>
        <th></th>
      </thaed>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
      <% end %>
      </tbody>
      <% else %>
      <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
          <td>
            <%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>